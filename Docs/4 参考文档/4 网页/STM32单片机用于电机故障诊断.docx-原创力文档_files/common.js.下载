                $('[data-header-drop=member]').find('dl.profile dt a').html('<span></span><i class="icon icon-member-vip icon-member-vip-yes"></i>');
                $('[data-header-drop=member]').find('dl.profile dt a span').text(member.data.userid);
                $('[data-header-drop=member]').find('dl.profile dd span')
                .addClass('is-vip')
                .text(member.data.expire_time + '到期');
