                $('[data-header-drop=member]').find('dl.profile dd span').text('您不是VIP用户');
                $('[data-header-drop=member]').find('dl.profile dd a')
                .attr('title','加入VIP')
                .text('加入VIP');
            }
            owa.btn( $('[data-header-drop=member]').find('[data-owa]') );
        },100);
    }
