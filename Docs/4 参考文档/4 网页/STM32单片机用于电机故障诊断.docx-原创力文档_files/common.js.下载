    msg:function(){
        var t = 0,
            doFun = function(){
                $.ajax({
                    type: "GET",
                    url: __API_HOST__ + '/chat/MsgInfo/getUserLastTimeUnread',
                    dataType: "JSONP",
                    success: function (res) {
                        if(res.code == 200){
                            if(+res.data.unread_num){
                                $('.sidebar-msg em.msg-num').css('display','block').text(res.data.unread_num);
                            }else{
                                $('.sidebar-msg em.msg-num').css('display','none').text('');
                            }
                        }else{
                            clearInterval(t);
                        }
                    }
                });
            };
        if( base.member.status == 1 ){
            doFun();
            t = setInterval(function(){
                doFun();
            },5000);
        }
        $('#sidebar .sidebar-msg').on('click',function(){
            if( base.member.status == 1 ){
                $('.sidebar-msg em.msg-num').css('display','none').text('');
                util.im({
                    request_form: 'pc_index',
                    side_msg:'1'
                });
            }else{
                member.login({
                    title: '操作前，请先登录',
                    callback: function () {}
                });
            }
        });
    },
    app: function(){
        $('#sidebar .sidebar-app').mouseenter(function(){
            var $img = $(this).find('.panel').find('img'),
                data_src = $img.attr('data-src');
            if( data_src ){
                $img.attr('src',data_src);
                $img.removeAttr('data-src');
            }
        });
    },
    browse: function(){
        var flag = 0;
        $('#sidebar .sidebar-browse').mouseenter(function(){
            if( flag ){
                return;
            }
            $.ajax({
                url: '/user_center_v1/user/Api/getBrowseInfo.html',
                type: 'GET',
                dataType: 'JSON',
                beforeSend: function() {
                    flag = 1;
                },
                success: function(res){
                    var c = '',
                        max = 5;
                    if( res.code === 1 && res.data.browse.length ){
                        c = '<ul class="list">';
                        max = res.data.browse.length > max ? max : res.data.browse.length;
                        for (var i = 0; i < max; i++) {
                            c += '<li><a href="'+res.data.browse[i].url+'" title="'+res.data.browse[i].title+'" target="_blank"><i class="icon-font icon-format icon-format-'+res.data.browse[i].filetype+'"></i> <span>'+res.data.browse[i].title+'</span></a></li>';
                        }
                        c += '</ul>';
                        $('#sidebar .sidebar-browse .slip .hd a').css('display','block')
                    }else{
                        c = '<div class="empty">'+
                                '<img src="' + __HOME_ROOT__+ '/common/images/empty.png"/>'+
                                '<span>您未浏览过任何文档~</span>'+
                                ( base.member.status == 1 ? '' : '<a class="login" href="javascript:member.login();" title="立即登录">登录</a>' ) +
                            '</div>';
                        $('#sidebar .sidebar-browse .slip .hd a').css('display','none');
                    }
                    $('#sidebar .sidebar-browse .slip .bd').html(c);
                },
                complete: function(){
                    flag = 0;
                }
            });
        });
    },
    merchants: function(){
        $('#sidebar .sidebar-merchants').mouseenter(function(){
            if( typeof operate_crm_merchants != 'undefined' ){
                operate_crm_merchants.init();
            }else{
                util.load('/user_center_v1/static/crm/common/js/merchants.js?v=20220822',function(){
                    operate_crm_merchants.init();
                },'/user_center_v1/static/crm/common/css/merchants.css?v=20220802');
            }
        });
    },
    vipBenefit: function(){
        $('#sidebar .sidebar-vip').mouseenter(function(){
            if( typeof operate_vip_benefit != 'undefined' ){
                operate_vip_benefit.init();
            }else{
                util.load(__HOME_ROOT__+'/vip/js/benefit-layer.js?v=20241219',function(){
                    operate_vip_benefit.init();
                },__HOME_ROOT__+'/vip/css/benefit-layer.css?v=20241219');
            }
        });
    },
    top: function(){
        var $service = $('#sidebar .sidebar-service');
        $(window).scroll(function() {
            clearInterval(d);
            var d = setTimeout(function(){
                if($(window).scrollTop() >= 100){
                    $('#sidebar .sidebar-top').fadeIn(300);
                    $service.removeClass('service-radius');
                }else{
                    $('#sidebar .sidebar-top').fadeOut(300);
                    $service.addClass('service-radius');
                }
            },300)
        });
        $('#sidebar .sidebar-top').on('click',function(){
            $('html,body').animate({
                scrollTop: '0px'
            }, 1000);
        });
    },
    share: function() {
        $('#sidebar .sidebar-share').on('click', function () {
            if( typeof operate_share != 'undefined' ){
                operate_share.init();
            }else{
                util.load(__HOME_ROOT__+'/share/js/share.js?v=20241126',function(){
                    operate_share.init();
                },__HOME_ROOT__+'/share/css/share.css?v=20241126');
            }
        });
    }
};
var toggle = {
    init: function($parent){
        var that = this;
            $btn = $parent ? $parent.find('.btn-toggle-more') : $('.btn-toggle-more');
        setTimeout(function(){
            $btn.on('click',function(){
                that.more(this);
            });
        },100);
    },
    more: function(o){
        var $this = $(o),
            $box = $this.parents('.btn-toggle-more-box'),
            $role = $this.parents('[role=toggle-more]'),
            role_class = $role.attr('data-class');
        $role.removeClass(role_class);
        $box.remove();
    }
};
var member = {
    callbacks: [],
    data: {
        status: 0,
        userid: '',
        money: '0.000',
        is_vip: 0,
        is_company: 0,
        messageNums: 0
    },
    init: function(){
        var that = this;
        $('.header ul.menu li.member').find('a').on('click',function(){
            that.login();
        });
        if( base.member.status ){
            that.header();
        }else{
            owa.push(['setGlobalEventProperty','member_uname', '']);
        }
    },
    header: function(){
        var that = this,
            $li = $('.header ul.menu li.member');
        if ($li.length == 0) return
        $.ajax({
            url: base.member.url.info,
            type: 'GET',
            dataType: 'JSON',
            success:function(res) {
                if ( res.code == '200' ) {
                    $li.attr('data-header-drop','member');
                    $li.children('a').off("click")
                        .attr('title','个人中心')
                        .attr('href',base.member.menu.index)
                        .attr('target','_blank')
                        .html('<img src="'+__HOME_ROOT__+'/common/images/avator.png"/><span></span>')
                        .on('click',function(){
                            owa.load(['trackAction', 'header_menu_member_avator', 'pc']);
                        });
                    setTimeout(function(){
                        $li.children('a').find('span').text(res.data.userid);
                        if(window.location.pathname === '/' && typeof is_index != 'undefined' && is_index === 1 ) header_msg.init();
                    },100);
                    that.data = {
                        status: 1,
                        userid: res.data.userid,
                        money: res.data.legal_all_divide_money,
                        messageNums: res.data.messageNums,
                        is_company_vip: res.data.is_company_vip,
                        is_vip: res.data.is_vip,
                        vip_status: res.data.vip_status,
                        is_buy_vip:res.data.is_buy_vip,
                        expire_time: res.data.expire_time
                    };
                    owa.push(['setGlobalEventProperty','member_uname', res.data.userid]);
                    header.member();
                    if( that.callbacks.length ){
                        for(var i = 0; i < that.callbacks.length; i++ ){
                            that.callbacks[i]();
                        }
                        flag = 1;
                    }
                    util.stat('push',{login:1});
                }else{
                    that.data = {
                        status: 0,
                        userid: '',
                        money: '0.000',
                        messageNums: 0
                    };
                    owa.push(['setGlobalEventProperty','member_uname', '未登录']);
                }
            }
        });
    },
    login: function(options){
        auth.init({
            title: options && typeof options.title != 'undefined' ? options.title : '登录',
            callback: function(){
                owa.load(['trackAction', 'header_menu_member_login', 'pc']);
                options && typeof options.callback != 'undefined' && jQuery.isFunction(options.callback) && options.callback();
            }
        });
    },
    quit: function() {
        $.ajax({
            url: base.member.url.quit,
            type: 'GET',
            dataType: 'JSON',
            success:function(res) {
                switch( res.code) {
                    case 1:
                        localStorage.removeItem('IM_QR_NO_MORE');
                        localStorage.removeItem('USER_SIGN');
                        sessionStorage.removeItem('INDEX_MSG_HIDE');
                        base.member.token = '';
                        util.msg(res.message,'reload');
                        break;
                    case 4:
                        break;
                    default: 
                        util.msg(res.message);
                        break;
                }
            }
        });
    }
};
var auth = {
    _layer: 0,
    callbacks: [
        function(){
            member.header();
            header_track.refresh();
        }
    ],
    _options: {},
    init: function(options){
        var that = this,
            t = '',
            _content = __OPEN_HOST__+'/login/login/popindex.html';
        if(base.login_type === 'weixin_applet') _content += '?loginType=weixin_applet';
        that._options = options;
        t = that._options && typeof that._options.title != 'undefined' ? that._options.title : '操作前，请先登录';
        layer.open({
            skin: 'layer-login',
            id: 'layer-common-login',
            type: 2,
            title: t,
            area: ['422px', '500px'],
            content: _content,
            success: function (layero, index) {
                that._layer = index;
				that.layero = layero;
            }
        });
    },
    authen: function(options){
        var that = this;
        $.ajax({
            url: base.auth.url.status,
            type: 'GET',
            success: function(res) {
                switch( res.code) {
                    case 1:
                        if( +res.data.checkoriginal === 1 ){
                            if( typeof options != 'undefined' && jQuery.isFunction(options.callback) ){
                                options.callback();
                            }
                        }else{
                            if( typeof auth_authen != 'undefined' ){
                                auth_authen.init(options);
                            }else{
                                util.lazy( __HOME_ROOT__ + '/auth/js/authen.js',function(){
                                    auth_authen.init(options);
                                },__HOME_ROOT__ + '/auth/css/authen.css');
                            }
                        }
                        break;
                    case 4:
                        that.init(options);
                        break;
                    default:
                        util.msg(res.message);
                        break;
                }
            }
        });
    },
    status: function(options){
        var that = this;
        $.ajax({
            url: base.auth.url.status,
            type: 'GET',
            success: function(res) {
                switch( res.code) {
                    case 1:
                        if( typeof options != 'undefined' && jQuery.isFunction(options.callback) ){
                            options.callback();
                        }
                        break;
                    case 4:
                        that.init(options);
                        break;
                    default: 
                        util.msg(res.message);
                        break;
                }
            }
        });
    },
    callback: function (res) {
        var that = this,
            _options_callback = typeof res._options_callback == 'undefined' ? true : res._options_callback,
            flag = 0;
        base.member.token = res.datas.token;
        if( res.status == 200 ){
            $.ajax({
                url: base.member.url.login + ( res.datas.must_token ?  '?token='+ res.datas.token : '' ),
                type: 'GET',
                dataType: 'JSON',
                success: function(res) {
                    switch(res.code){
                        case 1:
                            base.member.status = 1;
                            layer.close(that._layer);
                            if( that.callbacks.length ){
                                for(var i = 0; i < that.callbacks.length; i++ ){
                                    that.callbacks[i]();
                                }
                                flag = 1;
                            }
                            if( _options_callback && jQuery.isFunction(_options_callback) ) {
                                _options_callback();
                                flag = 1;
                            }
                            if( typeof that._options != 'undefined' && typeof that._options.callback != 'undefined' && jQuery.isFunction(that._options.callback) ) {
                                that._options.callback();
                                flag = 1;
                            }
                            if( flag == 0 ){
                                util.msg(res.message,'reload');
                            }
                            break;
                        default:
                            util.msg(res.message);
                            break;
                    }
                },
                error: function () {
                    util.msg('登录失败');   
                }
            });
        }
    }
};

(function(){
    if( window.location.host.substr(window.location.host.length - 11, 11 ) != 'book118.com'){
        window.location.href = 'https://max.book118.com/';
    }
}());

var owa_cmds = owa_cmds || [];
var owa = {
    init: function(){
        owa_cmds.push(['setSiteId', 'max_v2']);
    },
    //只添加值
    push: function(arr){
        if( arr.length ){
            owa_cmds.push(arr);
        }
    },
    //需要加载js，添加值
    load: function(arr){
        var that = this;
        if( arr.length ){
            if ( typeof OWA == 'undefined' ) {
                util.js('//e-s.book118.com/modules/base/js/owa.tracker-combined-min.js?v=20200902', function () {
                    that.push(arr);
                });
            }else{
                that.push(arr);
            }
        }
    },
    href: function($href,source){
        var that = this;
        if( $href.attr('owa-href') != 'had' ){
            $href.on('click',function(){
                var _href = $(this).attr('href');
                _href = _href.substr(0,4).toLocaleLowerCase() != 'http' ? window.location.origin + _href : _href;
                source = $(this).attr('data-owa') ? $(this).attr('data-owa') : source;
                that.load(['setCvtRef', _href, source]);
            }).attr('owa-href','had');
        }
    },
    btn: function($btn,source){
        var that = this;
        if( $btn.attr('owa-btn') != 'had' ){
            $btn.on('click',function(){
                source = $(this).attr('data-owa') ? $(this).attr('data-owa') : source;
                that.load(['trackAction', source, 'pc']);
            }).attr('owa-btn','had');
        }
    },
    click: function($btn,source){
        var that = this;
        if( $btn.attr('owa-click') != 'had' ){
            $btn.on('click',function(){
                var _href = $(this).attr('href');
                _href = _href.substr(0,4).toLocaleLowerCase() != 'http' ? window.location.origin + _href : _href;
                source = $(this).attr('data-owa') ? $(this).attr('data-owa') : source;
                that.load(['trackAction', source, 'pc']);
                that.load(['setCvtRef', _href, source + '_href']);
            }).attr('owa-click','had');
        }
    }
};
var cover = {
    init:function(){
        if(util.getIeVersion()==7){
            var items = $('span.cover');
            items.on('click',function(){
                window.open($(this).parent().attr('href'),"_blank");
            })
        }
    }
};
var gray = {
    init: function(){
        if(typeof is_gray != 'undefined' && [2].indexOf(+is_gray)>-1) {
            var userAgent = navigator.userAgent;  
            var isIE11 = userAgent.indexOf('Trident') > -1 && userAgent.indexOf("rv:11.0") > -1;
            if((util.getIeVersion()==0&&isIE11)||util.getIeVersion()==10) $('html').addClass('ie-gray');
            else if(util.getIeVersion()>0&&util.getIeVersion()<10) $('html').addClass('ie-gray-low');
            else $('html').addClass('gray');
        }
    }
}
